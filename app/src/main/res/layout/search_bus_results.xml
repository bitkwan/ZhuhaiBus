<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="5sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:paddingBottom="10sp"
        android:paddingTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2333路"
            android:id="@+id/lineName"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一些提示的内容"
            android:id="@+id/summaryMessage"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/searchOLButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/addFavButton"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_gps_not_fixed_black_24dp" />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/addFavButton"
        android:layout_toLeftOf="@+id/searchOLButton"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_favorite_border_white_24dp" />
</RelativeLayout>